    <script>
        // Confetti Animation
        function createConfetti() {
            const confettiCount = 50;
            const colors = ['#FFC0CB', '#FF69B4', '#F08080', '#FFD700', '#ADD8E6'];
            for (let i = 0; i < confettiCount; i++) {
                const confetti = document.createElement('div');
                confetti.classList.add('confetti-piece');
                confetti.style.left = `${Math.random() * 100}vw`;
                confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                confetti.style.animationDuration = `${Math.random() * 3 + 2}s`;
                confetti.style.animationDelay = `${Math.random() * 5}s`;
                confetti.style.setProperty('--x', `${(Math.random() - 0.5) * 20}vw`);
                document.body.appendChild(confetti);

                setTimeout(() => confetti.remove(), 7000);
            }
        }

        // Balloon Animation
        function createBalloon() {
            const balloon = document.createElement('div');
            balloon.classList.add('balloon');
            const colors = ['#F87171', '#FDA4AF', '#FCD34D', '#A78BFA'];
            balloon.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
            balloon.style.left = `${Math.random() * 90 + 5}vw`;
            balloon.style.animationDuration = `${Math.random() * 10 + 15}s`;
            balloon.style.animationDelay = `${Math.random() * 5}s`;
            balloon.style.setProperty('--rotate-deg', `${(Math.random() - 0.5) * 30}deg`);
            document.body.appendChild(balloon);

            setTimeout(() => balloon.remove(), 25000);
        }

        // Initial creation
        createConfetti();
        createBalloon();

        // Repeat creation at intervals
        setInterval(createConfetti, 3000);
        setInterval(createBalloon, 8000);
    </script>
